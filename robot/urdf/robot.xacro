<?xml version='1.0'?>

<robot name="name" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <link name='robot_footprint'> </link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="robot_body" />
  </joint>

  <link name='robot_body'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="9"/>
      <origin xyz="0 0 0.5" rpy=" 1.5707 0 1.5707"/>
      <inertia
          ixx="0.4298" ixy="0" ixz="0"
          iyy="0.207" iyz="0"
          izz="0.236"
      />
    </inertial>

    <collision name='robot_collision'>
      <origin xyz="0 0 0.5" rpy=" 1.5707 0 1.5707"/>
      <geometry>
        <!--<box size="1.0 1.0 1.0"/>-->
        <mesh filename="package://robot/meshes/Dingo_without_tyre.dae"/>
      </geometry>
    </collision>

    <visual name='robot_visual'>
      <origin xyz="0 0 0.5" rpy=" 1.5707 0 1.5707"/>
      <geometry>
        <mesh filename="package://robot/meshes/Dingo_without_tyre.dae"/>
      </geometry>
    </visual>
  </link>
  
  <link name='left_wheel'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="0.35"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.000225" ixy="0" ixz="0"
          iyy="0.000225" iyz="0"
          izz="0.0004375"
      />
    </inertial>

    <collision name='left_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.015"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.015"/>
      </geometry>
    </visual>
  </link>
    
  
  <link name='right_wheel'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="0.35"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.000225" ixy="0" ixz="0"
          iyy="0.000225" iyz="0"
          izz="0.0004375"
      />
    </inertial>

    <collision name='right_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.015"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.015"/>
      </geometry>
    </visual>
  </link>
  
  <link name='camera_pillar'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0001979" ixy="0" ixz="0"
          iyy="0.0001979" iyz="0"
          izz="0.0000625"
      />
    </inertial>

    <collision name='pillar_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.1"/>
      </geometry>
    </collision>

    <visual name='pillar_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.1"/>
      </geometry>
    </visual>
  </link>

  <link name='camera_link'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0001979" ixy="0" ixz="0"
          iyy="0.0001979" iyz="0"
          izz="0.0000625"
      />
    </inertial>

    <collision name='camera_link_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robot/meshes/intel_realsense_camera.dae"/>
      </geometry>
    </collision>

    <visual name='camera_link_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robot/meshes/intel_realsense_camera.dae"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="-0.107266 -0.242145 0.5" rpy=" 0 -1.5707 1.5707"/>
    <child link="left_wheel"/>
    <parent link="robot_body"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="-0.107266 0.242145 0.5" rpy=" 0 -1.5707 1.5707"/>
    <child link="right_wheel"/>
    <parent link="robot_body"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint type="fixed" name="camera_pillar_hinge">
    <origin xyz="-0.194581 0.000743 0.612654" rpy="-0.002050 -0.088042 -0.023313"/>
    <child link="camera_pillar"/>
    <parent link="robot_body"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint type="fixed" name="camera_link_hinge">
    <origin xyz="-0.020635 0.006883 0.064051" rpy="-1.57 0 1.57"/>
    <child link="camera_link"/>
    <parent link="camera_pillar"/>
    <axis xyz="0 0 -1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
  
  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="camera_pillar">
    <material>Gazebo/Red</material>
  </gazebo>

</robot>
